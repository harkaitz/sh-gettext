#!/bin/sh -e
##:
#h: Usage: gettext-h-i18n--html HTML...
#h:
#h: Print texts between {{.T "TEXT"}} in html files.
##:
gettext_h_i18n__html() {
    grep -o '{{\.[TH] ".*"}}' "$@" \
        | sed 's|^[^"]*"||;s|"[^"]*$||;'
}
if test @"$(basename "$0")" = @"gettext-h-i18n--html";then
    case "${1}" in
        ''|-h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0" ;;
        *)            gettext_h_i18n__html "$@"; exit 0 ;;
    esac
fi
